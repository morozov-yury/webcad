<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<templates>
<!-- ########################################################################################################### -->
    <template name="message.event.contest.stop.owner">
        <locale language="en">
            <title>Your contest stopped.</title>
            <body>
				Your contest <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div>: stopped by ${cause}. 
			</body>
        </locale>
        <locale language="ru">
            <title>Ваш конкурс остановлен</title>
            <body>
				Ваш конкурс <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div>: закрыт по причине ${cause}.
			</body>
        </locale>
    </template>
<!-- ########################################################################################################### -->
    <template name="message.event.contest.awarding.start.owner">
        <locale language="en">
            <title>Contest start awarding</title>
            <body>
				Your contest <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div> start awarding. Please announce the results.
			</body>
        </locale>
        <locale language="ru">
            <title>Конкурс перешел в награждение</title>
            <body>
            	Ваш конкурс <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div> перешел в награждение. Пожалуйста, огласите результаты.
			</body>
        </locale>
    </template>
<!-- ########################################################################################################### -->
    <template name="message.event.contest.finished.owner">
        <locale language="en">
            <title>Contest finished</title>
            <body>
				Your contest <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div> finished.
			</body>
        </locale>
        <locale language="ru">
            <title>Конкурс завершился</title>
            <body>
            	Ваш конкурс <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div> завершился.
			</body>
        </locale>
    </template>
<!-- ########################################################################################################### -->
    <template name="message.event.contest.freezed.owner">
        <locale language="en">
            <title>Your contest freezed</title>
            <body>
				Your contest <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div> freezed by ${cause}.
			</body>
        </locale>
        <locale language="ru">
            <title>Ваш конкурс заморожен</title>
            <body>
            	Ваш конкурс <div location='TYPE|contest_link|ID|${contest.id}|STYLE|link'></div> заморожен попричине  ${cause}.
			</body>
        </locale>
    </template>
